<div id="forgotPasswordModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Réinitialiser le mot de passe</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="forgotPasswordForm">
                    @Html.AntiForgeryToken()
                    <p>Email: <span id="emailPlaceholder"></span></p>
                    <p>Cliquez sur le lien ci-dessous pour réinitialiser votre mot de passe. Vous recevrez un code sur votre email.</p>
                    <a href="#" id="resetPasswordLink">Réinitialiser</a>
                    <div id="verificationSection" style="display:none;">
                        <p>Verification Code:</p>
                        <input type="text" id="verificationCodeInput" />
                        <button type="button" id="verifyCodeButton">Vérifier le Code</button>
                        <div id="resetPasswordSection" style="display:none;">
                            <p>Password:</p>
                            <input type="password" id="passwordInput" />
                            <p>Confirm Password:</p>
                            <input type="password" id="confirmPasswordInput" />
                            <button type="button" id="resetPasswordButton">Modifier</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
